{
  "name": "@orieken/saturday-playwright-otel-reporter",
  "version": "0.1.3",
  "description": "OpenTelemetry reporter for Playwright in the Saturday Framework",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "clean": "rimraf dist",
    "prepack": "npm run clean && npm run build",
    "lint": "eslint 'src/**/*.ts'",
    "test": "jest"
  },
  "keywords": [
    "playwright",
    "opentelemetry",
    "reporter",
    "testing",
    "observability",
    "saturday"
  ],
  "author": "Oscar Rieken",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "eslint": "^8.0.0",
    "jest": "^30.2.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.4.6",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "@playwright/test": ">=1.0.0"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/core": "^2.2.0",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.208.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.208.0",
    "@opentelemetry/resources": "^2.2.0",
    "@opentelemetry/sdk-metrics": "^2.2.0",
    "@opentelemetry/sdk-trace-base": "^2.2.0",
    "@opentelemetry/sdk-trace-node": "^2.2.0",
    "@opentelemetry/semantic-conventions": "^1.38.0"
  }
}
