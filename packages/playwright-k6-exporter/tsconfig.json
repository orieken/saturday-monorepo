{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "lib": [
      "ES2021",
      "DOM"
    ],
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": false,
    "outDir": "dist",
    "types": [
      "node",
      "@playwright/test"
    ]
  },
  "include": [
    "src"
  ]
}